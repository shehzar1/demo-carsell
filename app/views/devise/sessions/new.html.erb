<div class="center_div mt-4">
  <div class="card">
    <div class="card-body">
    <h4 class="text-center">Log In</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <br />
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "field_width" %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <br />
        <%= f.password_field :password, autocomplete: "current-password", class: "field_width" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <div class="container">
          <div class="row">
            <div class="col text-center">
              <%= f.submit "Log In", class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="text-center">
      <br>
      <p>Already have an Account?</p>
      <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>
