<div class="center_div">
  <div class="card">
    <div class="card-body">
      <h4 class="text-center">Sign up</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %>
          <br />
          <%= f.text_field :email, autofocus: true, placeholder: "user@email.com", autocomplete: "email", class:"field_width" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :username %>
          <br />
          <%= f.text_field :username, placeholder: "username", autocomplete: "username", class:"field_width" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password %>
          <br />
          <%= f.password_field :password, placeholder: "********", autocomplete: "new-password", class:"field_width" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :password_confirmation %>
          <br />
          <%= f.password_field :password_confirmation, placeholder: "********", autocomplete: "new-password", class:"field_width" %>
        </div>
        <br>
        <div class="actions">
          <div class="container">
            <div class="row">
              <div class="col text-center">
                <%= f.submit "Create Account", class: "btn btn-secondary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="text-center">
        <br>
        <%= render "devise/shared/links" %>
        <p>Already have an Account?</p>
      </div>
    </div>
  </div>
</div>
