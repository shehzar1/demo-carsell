<div class="container">
  <div class="text-center">
    <button type="button" class="btn btn-success btn-lg">Add Car Information</button>
    <h3>---Add Image---</h3>
    <div class="progress mt-4">
      <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 33%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
      </div>
    </div>
  </div>
  <div class="card">
    <%= form_with(model: @ad, local: true, method: :put, url: ad_step_path) do |f| %>
      <%= hidden_field_tag :ad_id, @ad.id %>
      <%= f.label "Car Images" %>
      <br>
      <%= f.file_field :images, multiple: true, direct_upload: true %>
      <%= f.submit "Update"%>
    <% end %>
  </div>
</div>
