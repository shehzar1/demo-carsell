<div class="container">
  <div class="text-center">
    <button type="button" class="btn btn-success btn-lg mt-4">Add Car Information</button>

  </div>
  <div class="progress mt-4 mb-4">
      <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 33%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Step2
      </div>
    </div>
  <div class="card text-center">
    <h3>Add Images</h3>
    <%= form_with(model: @ad, local: true, method: :put, url: wizard_path) do |f| %>
      <%= hidden_field_tag :ad_id, @ad.id %>
      <%= f.file_field :images, multiple: true, direct_upload: true, accept:'image/*', class: "btn btn-outline-success mt-5" %>
      <br>
      <%= f.submit "Add Images", class: "btn btn-primary mt-5 mb-5" %>
    <% end %>
  </div>
</div>
