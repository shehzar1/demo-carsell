<div class="container_green">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-10">
        <h1><%= @ad.description %></h1>
        <h4><%= @ad.city %></h4>
      </div>
      <div class="col-sm-2 border-left border-dark">
        <h4><%= @ad.price %></h4>
        <h4>PKR</h4>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body mb-5">
          <button id="btn" type="button" class="btn btn-light btn-sm">Copy Ad Link</button>
          <div class="center_div">
            <button type="button" class="btn btn-outline-success mb-4" data-bs-toggle="modal" data-bs-target="#Modal">View Phone Information</button>
            <button type="button" class="btn btn-outline-info mb-4" data-bs-toggle="modal" data-bs-target="#Modal">Send Message</button>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <h4>Car Make</h4>
              <h4>Engine Type</h4>
              <h4>Engine Capacity (cc)</h4>
              <h4>Milage (km)</h4>
              <h4>Color</h4>
              <h4>Assembly</h4>
              <h4>Transmission Type</h4>
            </div>
            <div class="col-lg-6 border-left border-dark">
              <h4>"<%= @ad.car_make %>"</h4>
              <h4>"<%= @ad.engine_type %>"</h4>
              <h4>"<%= @ad.engine_capacity %>"</h4>
              <h4>"<%= @ad.milage %>"</h4>
              <h4>"<%= @ad.color %>"</h4>
              <h4>"<%= @ad.assembly_type %>"</h4>
              <h4>"<%= @ad.transmission_type %>"</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<center>
  <div id="carouselExampleIndicators" class="carousel slide mt-5" data-bs-ride="carousel">
    <% if @ad.images.attached? %>
      <div class="carousel-inner">
        <%@ad.images.each_with_index do |pic,i|%>
          <div class="carousel-item <%= "active " if i.zero? %>">
           <%= image_tag pic, class: "w-25"%>
          </div>
        <% end %>
      </div>
    <% end %>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</center>

<div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="modal_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal_label">Contact Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= @ad.primary_contact %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
