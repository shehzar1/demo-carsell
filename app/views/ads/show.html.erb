<div class="container_green">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-10">
        <h1><%= @ad.description %></h1>
        <h4><%= @ad.city %></h4>
      </div>
      <div class="col-sm-2 border-left border-dark">
        <h4><%= @ad.price %></h4>
        <h4>PKR</h4>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <button id="btn" type="button" class="btn btn-light btn-sm">Copy Ad Link</button>
          <div class="center_div">
            <button type="button" class="btn btn-outline-success mb-4" data-bs-toggle="modal" data-bs-target="#modal">View Phone Information</button>
            <button type="button" class="btn btn-outline-info mb-4" data-bs-toggle="modal" data-bs-target="#modal">Send Message</button>
            <% if @ad.images.attached? %>
              <div class="carousel-inner">
              <% @ad.images.each_with_index do |pic, i| %>
                <div class="carousel-item <%= "active" if i.zero? %>">
                 <%= image_tag pic, class: "image_size" %>
                </div>
              <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <h4>Car Make</h4>
              <h4>Engine Type</h4>
              <h4>Engine Capacity (cc)</h4>
              <h4>Milage (km)</h4>
              <h4>Color</h4>
              <h4>Assembly</h4>
              <h4>Transmission Type</h4>
            </div>
            <div class="col-lg-6 border-left border-dark">
              <h4>"<%= @ad.car_make %>"</h4>
              <h4>"<%= @ad.engine_type %>"</h4>
              <h4>"<%= @ad.engine_capacity %>"</h4>
              <h4>"<%= @ad.milage %>"</h4>
              <h4>"<%= @ad.color %>"</h4>
              <h4>"<%= @ad.assembly_type %>"</h4>
              <h4>"<%= @ad.transmission_type %>"</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="label">Contact Information</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= @ad.primary_contact %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
