<% if user_signed_in? %>
  <div class="container-fluid">
    <div class="text-center">
      <h2>Favorites</h2>
    </div>
    <div class="container_white mt-4">
      <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Maker</th>
            <th>Description</th>
            <th>City</th>
            <th>Price</th>
            <th>Type</th>
            <th>Capacity</th>
            <th>Milage</th>
            <th>Color</th>
            <th>Assembly</th>
            <th>Transmission</th>
          </tr>
        </thead>
        <tbody>
          <% @ads.find_all do |ad| %>
            <tr>
              <td><%= link_to ad.car_make, ad %></td>
              <td><%= ad.description %></td>
              <td><%= ad.city %></td>
              <td><%= ad.price %></td>
              <td><%= ad.engine_type %></td>
              <td><%= ad.engine_capacity %></td>
              <td><%= ad.milage %></td>
              <td><%= ad.color %></td>
              <td><%= ad.assembly_type %></td>
              <td><%= ad.transmission_type %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
